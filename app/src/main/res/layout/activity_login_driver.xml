<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#3EA99F">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userdriver"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp"
        android:hint="Username"
        android:textColor="#FEFCFF"
        android:textColorHint="#FEFCFF" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passdriver"
        android:layout_below="@+id/userdriver"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp"
        android:hint="Password"
        android:textColor="#FEFCFF"
        android:textColorHint="#FEFCFF" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/bntlog"
        android:layout_below="@+id/passdriver"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="44dp"
        android:textColor="#FEFCFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="เข้าสู่ระบบ พนักงานขับรถตู้"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#FEFCFF" />

</RelativeLayout>
